# Configurações de Banco de Dados (Prisma)
DATABASE_URL="postgresql://postgres:postgres@localhost:5435/carteira_digital?schema=public"

# Configurações de Autenticação JWT
JWT_SECRET=alterar-para-um-secret-forte
JWT_EXPIRATION=24h
JWT_ISSUER=carteira-digital
JWT_AUDIENCE=carteira-digital-users

# Configurações de Aplicação
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Segurança e Logs
BCRYPT_SALT_ROUNDS=10
PRISMA_LOG_LEVEL=query
